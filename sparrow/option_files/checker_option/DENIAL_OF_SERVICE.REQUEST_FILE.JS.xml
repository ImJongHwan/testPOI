            <value>document\.URL\..+$return</value>
            <value>document\.documentURI$variable</value>
            <value>document\.documentURI\..+$return</value>
            <value>document\.URLUnencoded$variable</value>
            <value>document\.URLUnencoded\..+$return</value>
